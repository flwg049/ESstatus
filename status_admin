<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic Ground Team Status Board</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f9f9f9;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }
        h1 {
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }
        th {
            background-color: #007bff;
            color: white;
        }
        td {
            background-color: #f9f9f9;
        }
        .status-active {
            color: green;
            font-weight: bold;
        }
        .status-inactive {
            color: red;
            font-weight: bold;
        }
        .refresh-btn {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }
        .refresh-btn:hover {
            background-color: #0056b3;
        }
        select {
            padding: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Dynamic Ground Team Status Board</h1>
        <table>
            <thead>
                <tr>
                    <th>Team Name</th>
                    <th>Status</th>
                    <th>Responsible Officer</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="statusTable">
                <!-- 데이터가 여기에 동적으로 추가됩니다 -->
            </tbody>
        </table>
        <button class="refresh-btn" onclick="refreshStatus()">Save Changes</button>
    </div>

    <script>
        const groundTeams = [
            { name: "Team Alpha", status: "Active", officer: "John Doe" },
            { name: "Team Bravo", status: "Inactive", officer: "Jane Smith" },
            { name: "Team Charlie", status: "Active", officer: "Sam Lee" },
            { name: "Team Delta", status: "Inactive", officer: "Alice Kim" },
        ];

        function renderStatusBoard() {
            const statusTable = document.getElementById("statusTable");
            statusTable.innerHTML = ""; // 기존 데이터를 초기화

            groundTeams.forEach((team, index) => {
                const row = document.createElement("tr");

                // 팀 이름
                const nameCell = document.createElement("td");
                nameCell.textContent = team.name;

                // 상태 (드롭다운 메뉴로 표시)
                const statusCell = document.createElement("td");
                const statusSelect = document.createElement("select");
                ["Active", "Inactive"].forEach(optionValue => {
                    const option = document.createElement("option");
                    option.value = optionValue;
                    option.textContent = optionValue;
                    if (optionValue === team.status) {
                        option.selected = true;
                    }
                    statusSelect.appendChild(option);
                });
                statusSelect.onchange = () => {
                    team.status = statusSelect.value;
                    updateStatusCellStyle(statusCell, team.status);
                };
                updateStatusCellStyle(statusCell, team.status);
                statusCell.appendChild(statusSelect);

                // 담당자
                const officerCell = document.createElement("td");
                officerCell.textContent = team.officer;

                // 액션 버튼 (삭제)
                const actionCell = document.createElement("td");
                const deleteButton = document.createElement("button");
                deleteButton.textContent = "Remove";
                deleteButton.style.backgroundColor = "#dc3545";
                deleteButton.style.color = "white";
                deleteButton.style.border = "none";
                deleteButton.style.padding = "5px 10px";
                deleteButton.style.cursor = "pointer";
                deleteButton.onclick = () => removeTeam(index);
                actionCell.appendChild(deleteButton);

                row.appendChild(nameCell);
                row.appendChild(statusCell);
                row.appendChild(officerCell);
                row.appendChild(actionCell);

                statusTable.appendChild(row);
            });
        }

        function updateStatusCellStyle(cell, status) {
            cell.className = "";
            cell.classList.add(status === "Active" ? "status-active" : "status-inactive");
        }

        function removeTeam(index) {
            groundTeams.splice(index, 1); // 팀 삭제
            renderStatusBoard(); // 테이블 재렌더링
        }

        function refreshStatus() {
            alert("All changes have been saved!");
            console.log("Updated Ground Teams:", groundTeams); // 업데이트된 데이터를 콘솔에 출력
        }

        // 페이지 로드 시 초기화
        renderStatusBoard();
    </script>
</body>
</html>
